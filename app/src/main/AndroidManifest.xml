<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        tools:replace="android:fullBackupContent"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IndividualProject"
        tools:targetApi="31">

        <!-- Splash Screen: The main entry point of the app -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.IndividualProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities, not exported -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.IndividualProject" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.IndividualProject" />
        <activity
            android:name=".ForgetPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.IndividualProject" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.IndividualProject" />
        <activity
            android:name=".AddProductActivity"
            android:exported="false"
            android:label="@string/title_activity_add_product"
            android:theme="@style/Theme.IndividualProject" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.IndividualProject" />

        <!-- Correctly declared EditProductActivity -->
        <activity
            android:name=".EditProductActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_product"
            android:theme="@style/Theme.IndividualProject"
            android:screenOrientation="fullSensor"
            android:parentActivityName=".DashboardActivity">
            <!-- This meta-data tag is for supporting back navigation on older API levels -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".UserProductViewActivity"
            android:exported="false"
            android:label="@string/title_activity_user_product_view"
            android:theme="@style/Theme.IndividualProject" />

    </application>

</manifest>